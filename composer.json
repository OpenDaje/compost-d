{
    "name": "opendaje/compost-d",
    "type": "library",
    "description": "Generic library",
    "license": "MIT",
    "authors": [
        {
            "name": "Zerai Teclai",
            "email": "teclaizerai@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "bamarni/composer-bin-plugin": "^1.8"
    },
    "config": {
        "allow-plugins": {
            "bamarni/composer-bin-plugin": true
        },
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "extra": {
        "bamarni-bin": {
            "bin-links": true,
            "forward-command": false,
            "target-directory": "tools"
        }
    },
    "autoload": {
        "psr-4": {
            "CompostD\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ComposerD\\Tests\\": "tests/"
        }
    }
}
